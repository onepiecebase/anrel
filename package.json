  "scripts": {
    "commit": "git-cz",
    "install": "lerna bootstrap",
    "lint-stage:format": "prettier --config ./prettierrc.js --write --",
    "ci:deploy": "lerna publish from-package --yes",
    "lerna:version": "lerna version --no-git-tag-version --no-push",
    "format": "prettier --config ./prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,md,json,yml,yaml}\"",
    "lint:ts": "lerna exec \"eslint --ext .ts ./src --fix\"",
    "lint": "npm run lint:ts",
    "unitest": "lerna run unitest --stream",
    "test": "npm run unitest",
    "release": "lerna publish",
    "product": "lerna run product --stream",
    "develop": "echo \"暂时没有\"",
    "start": "npm run develop"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
