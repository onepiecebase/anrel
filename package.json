{
  "name": "anrel",
  "version": "0.0.1-alpha.1",
  "license": "MIT",
  "contributors": [
    {
      "name": "eonlee",
      "email": "eonlee96@gmail.com",
      "url": "https://github.com/eonlee"
    },
    {
      "name": "DavidJones",
      "email": "qowera@gmail.com",
      "url": "https://github.com/DavidKk"
    }
  ],
  "scripts": {
    "commit": "git-cz",
    "install": "lerna bootstrap",
    "version": "lerna version --no-git-tag-version --no-push",
    "ci:deploy": "lerna publish from-package --yes",
    "lint-stage:format": "prettier --config prettierrc.js --write --",
    "lint-stage:lint:ts": "eslint --config .eslintrc.js --ext .ts --fix --",
    "format": "prettier --config prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,md,json,yml,yaml}\"",
    "lint:ts": "eslint --config .eslintrc.js --ext .ts . --fix",
    "lint": "npm run lint:ts",
    "unitest": "lerna run unitest --stream",
    "test": "npm run lint && npm run unitest",
    "release": "lerna publish",
    "product": "lerna exec \"rimraf ./libs && tsc --project ./src -outDir ./libs --declaration\" --stream",
    "develop": "lerna run unitest:watch --parallel",
    "start": "npm run develop"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/inquirer": "^6.5.0",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "commander": "^5.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "husky": "^4.0.10",
    "inquirer": "^7.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{md,json,yml,ts,tsx,d.ts}": [
      "npm run lint-stage:format",
      "git add"
    ],
    "**/*.{ts,tsx,d.ts}": [
      "npm run lint-stage:lint:ts",
      "git add"
    ]
  }
}
