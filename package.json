  "scripts": {
    "commit": "git-cz",
    "install": "lerna bootstrap",
    "ci:deploy": "lerna publish from-package --yes",
    "lerna:version": "lerna version --no-git-tag-version --no-push",
    "format": "prettier --config ./prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,md,json,yml,yaml}\"",
    "lint:ts": "lerna exec \"eslint --ext .ts ./src --fix\"",
    "lint": "npm run lint:ts",
    "unitest": "lerna run unitest --stream",
    "test": "npm run unitest",
    "release": "lerna publish",
    "product": "lerna run product --stream",
    "develop": "echo \"暂时没有\"",
    "start": "npm run develop"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{md,json,yml}": [
      "npm run format"
    ],
    "**/*.{ts,tsx,d.ts}": [
      "npm run lint:ts"
    ]
  }
}
