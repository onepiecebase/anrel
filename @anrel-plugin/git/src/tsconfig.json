{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "@anrel/*": ["../node_modules/@anrel/*/src"]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
